<p id="notice"><%= notice %></p>

<h1>Lands</h1>

<table>
  <thead>
    <tr>
      <th>Land type</th>
      <th>Area</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lands.each do |land| %>
      <tr>
        <td><%= land.land_type %></td>
        <td><%= land.area %></td>
        <td><%= land.customer.full_name() %></td>
        <td><%= link_to 'Show', land %></td>
        <td><%= link_to 'Edit', edit_customer_land_path(land.customer, land) %></td>
        <td><%= link_to 'Destroy', [land.customer, land], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Land', new_customer_land_path(@customer) %>
